<%= form_with(model: @rent, local: true ,url: choose_new_or_edit ) do |form| %>

<% if @rent.errors.any? %>
<div id="error_explanation">
  <ul>
    <% @rent.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="property">
  <div class="rent_title">
    <%= form.label :物件名 %><br>
    <%= form.text_field :property_name %>
  </div>
  <div class="rent_title">
    <%= form.label :賃料 %><br>
    <div class="flex">
      <%= form.text_field :rent %>
      円
    </div>
  </div>
  <div class="rent_title">
    <%= form.label :住所 %><br>
    <%= form.text_field :address %>
  </div>
  <div class="rent_title">
    <%= form.label :築年数 %><br>
    <div class="flex">
      <%= form.text_field :age%>
      年
    </div>
  </div>
  <div class="rent_title">
    <%= form.label :備考 %><br>
    <%= form.text_area :note %>
  </div>
</div>


<%i=0%>
<%= form.fields_for :nearest_stations do |nearest_station| %>
<%i=i+1%>
<div class="station">
  <h3>最寄り駅<%=i%></h3>
  <div class="rent_title">
    <%= nearest_station.label :路線名 %><br>
    <%= nearest_station.text_field :transit_name %>
  </div>
  <div class="rent_title">
    <%= nearest_station.label :駅名 %><br>
    <%= nearest_station.text_field :station_name %>
  </div>
  <div class="rent_title">
    <%= nearest_station.label :徒歩分数 %><br>
    <div class="flex">
      <%= nearest_station.text_field :walk_fraction %>
      分
    </div>
  </div>
</div>
<% end %>

<br>
<%= form.submit "登録する",data: { confirm: 'この内容で登録します' } %>
<% end %>
