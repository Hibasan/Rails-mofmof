<div class="container">
<h2>物件詳細</h2>
<div class="property">
  <ul>
    <li><b>物件名:</b> <%= @rent.property_name %></li>
    <li><b>賃料:</b> <%= @rent.rent.to_s(:delimited) %>円</li>
    <li><b>住所:</b> <%= @rent.address %></li>
    <li><b>築年数</b> <%= @rent.age %>年</li>
    <li><b>備考</b> <%= @rent.note %></li>
  </ul>
</div>

<%i=0%>
<% @stations.each do |nearest_station|%>
<%i=i+1%>

<div class="station">
  <h3>最寄り駅<%=i%></h3>
  <ul>
    <li><b>路線名</b> <%= nearest_station.transit_name %></li>
    <li><b>駅名</b> <%= nearest_station.station_name %></li>
    <li><b>徒歩分数</b> <%= nearest_station.walk_fraction %>分</li>
  </ul>
</div>
<% end %>

<%= link_to '編集', edit_property_information_path(params[:id]) %>
<%= link_to '戻る', property_informations_path %>
</div>
